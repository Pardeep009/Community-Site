
  <%- include('partials/commonhead'); -%>
  <link rel="stylesheet" href="/profile.css" />
  <link rel="stylesheet" href="/blueimage.css" />
  <style>
    .editbutton {
      <% if(commo._id==obj._id){ %>
       display : block;
      <% } else{ %>
       display : none;
      <% } %>
    }

    .home {
      background-color:black;
    }
  </style>
  </head>
  <body>
      <%- include('partials/header'); -%>
      <div id="viewscreen">
        <%- include('partials/sidebar'); -%>

        <div id="rightview">

            <div class="container-fluid div-min-width" style="padding:0; min-width:360px;">
                <div class="row">
                    <div class="col-lg-12 parentDiv" style="padding:0">
                      <div class="mobile profile-pic-center-main-div" style="margin-bottom:80px;">
                        <img src="<%= commo.photoname %>" class="profile-pic-center allSides">
                      </div>
                        <div class="to-center-div">

                            <div class="container childDiv">

                                <div class="panel panel-default" style="background: rgb(249, 249, 249);box-shadow: 0 3px 10px 0 rgba(115,143,147,.3);">
                                    <div class="panel-body">

                                        <div class="d-flex imageDiv">
                                            <div class="image-container">
                                                <img src="<%= commo.photoname %>" id="profilepic">
                                            </div>
                                        </div>

                                        <div class="form-group editbutton">
                                          <button type="button" class="btn btn-primary pull-right" style="margin-right:15px; display:block;" onclick="aslieditpage()" name="button">Edit</button>
                                            <!-- <a href="#" onclick="editpage()" class="btn btn-primary pull-right" style="margin-right:15px; display:block;">Edit</a> -->
                                        </div>

                                        <br>
                                        <br>

                                        <div class="col-sm-6">
                                            <div class="panel panel-default">
                                                <div class="panel-heading">Gender</div>
                                                <div class="panel-body"><%= commo.gender %></div>
                                            </div>
                                        </div>

                                        <div class="col-sm-6">
                                            <div class="panel panel-default">
                                                <div class="panel-heading">Name</div>
                                                <div class="panel-body"><%= commo.name %></div>
                                            </div>
                                        </div>

                                        <div class="col-sm-6">
                                            <div class="panel panel-default">
                                                <div class="panel-heading">City</div>
                                                <div class="panel-body"><%= commo.city %></div>
                                            </div>
                                        </div>

                                        <div class="col-sm-6">
                                            <div class="panel panel-default">
                                                <div class="panel-heading">D.O.B</div>
                                                <div class="panel-body"><%= commo.dob %></div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>

        </div>

      </div>

  </body>
  <script type="text/javascript" src="/sidebar.js"></script>
  </html>
